# General
# ------------------------------------------------------------------------------
USE_DOCKER=yes
IPYTHONDIR=/app/.ipython
DJANGO_SETTINGS_MODULE=config.settings.production
DJANGO_SECRET_KEY=your_secret_key_here
DJANGO_ADMIN_URL=admin/
DJANGO_ALLOWED_HOSTS=transcription.yourhost.com,api.transcription.yourhost.com

# Security
# ------------------------------------------------------------------------------
# TIP: better off using DNS, however, redirect is OK too
DJANGO_SECURE_SSL_REDIRECT=True

# Email
# ------------------------------------------------------------------------------
DJANGO_SERVER_EMAIL=

MAILGUN_API_KEY=
MAILGUN_DOMAIN=

# AWS / MinIO / S3 Storage
# ------------------------------------------------------------------------------
USE_S3=True
AWS_ACCESS_KEY_ID=your_minio_access_key
AWS_SECRET_ACCESS_KEY=your_minio_secret_key
AWS_STORAGE_BUCKET_NAME=transcription-audio
AWS_S3_ENDPOINT_URL=http://minio:9000
AWS_S3_USE_SSL=False

# Voxtral Transcription Service
# ------------------------------------------------------------------------------
VOXTRAL_BACKEND_URL=https://transcribe.simpliant-ds.eu
VOXTRAL_API_KEY=your_voxtral_api_key_here

# django-allauth
# ------------------------------------------------------------------------------
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True

# Gunicorn
# ------------------------------------------------------------------------------
WEB_CONCURRENCY=4

# Redis
# ------------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# Database
# ------------------------------------------------------------------------------
DATABASE_URL=postgres://postgres:postgres@postgres:5432/transcription_app